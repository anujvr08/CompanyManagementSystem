<UserControl x:Class="CompanyManagementSystem.Presentation.Views.DashboardView"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml">
    <Grid Margin="30">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto" />
            <RowDefinition Height="Auto" />
            <RowDefinition Height="*" />
            <RowDefinition Height="Auto" />
        </Grid.RowDefinitions>

        <!-- Header -->
        <StackPanel Grid.Row="0" Margin="0,0,0,40">
            <TextBlock Text="{Binding CompanyName, StringFormat='{}Company: {0}'}" 
                       Style="{StaticResource HeaderStyle}" />
            <TextBlock Text="Dashboard" Style="{StaticResource SubHeaderStyle}" Margin="0" />
        </StackPanel>

        <!-- Quick Actions Grid -->
        <Border Grid.Row="2" VerticalAlignment="Top">
            <WrapPanel HorizontalAlignment="Center">
                <!-- User Management Card -->
                <Border Style="{StaticResource CardStyle}" Width="250" Margin="15">
                    <StackPanel>
                        <TextBlock Text="Users" Style="{StaticResource LabelStyle}" FontSize="18" Margin="0,0,0,15"/>
                        <Button Content="Create New User" Command="{Binding CreateUserCommand}" 
                                Style="{StaticResource ModernBtn}" Margin="0,0,0,10" />
                        <Button Content="View User Directory" Command="{Binding UserListCommand}" 
                                Style="{StaticResource SecondaryBtn}" />
                    </StackPanel>
                </Border>

                <!-- Account Management Card -->
                <Border Style="{StaticResource CardStyle}" Width="250" Margin="15">
                    <StackPanel>
                        <TextBlock Text="Accounts" Style="{StaticResource LabelStyle}" FontSize="18" Margin="0,0,0,15"/>
                        <Button Content="Create New Account" Command="{Binding CreateAccountCommand}" 
                                Style="{StaticResource ModernBtn}" Margin="0,0,0,10" />
                        <Button Content="View Account Ledger" Command="{Binding AccountListCommand}" 
                                Style="{StaticResource SecondaryBtn}" />
                    </StackPanel>
                </Border>
            </WrapPanel>
        </Border>

        <!-- Footer -->
        <Button Grid.Row="3" Content="Close Company &amp; Logout" 
                Command="{Binding CloseCompanyCommand}" 
                Style="{StaticResource DangerBtn}" 
                HorizontalAlignment="Right" Width="200" />
    </Grid>
</UserControl>
