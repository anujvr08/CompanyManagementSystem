<UserControl x:Class="CompanyManagementSystem.Presentation.Views.CompanyListView"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml">
    <DockPanel Margin="20">
        <TextBlock Text="Select a Company" Style="{StaticResource HeadingText}" DockPanel.Dock="Top" />

        <StackPanel Orientation="Horizontal" DockPanel.Dock="Bottom" HorizontalAlignment="Right" Margin="0,10,0,0">
            <Button Content="Back" Command="{Binding BackCommand}" Margin="0,0,8,0" Padding="16,6" />
            <Button Content="Select" Command="{Binding SelectCompanyCommand}" Padding="16,6" />
        </StackPanel>

        <DataGrid ItemsSource="{Binding Companies}" SelectedItem="{Binding SelectedCompany}"
                  AutoGenerateColumns="False" IsReadOnly="True" SelectionMode="Single" Margin="0,10,0,0">
            <DataGrid.Columns>
                <DataGridTextColumn Header="ID" Binding="{Binding CompanyId}" Width="60" />
                <DataGridTextColumn Header="Company Name" Binding="{Binding CompanyName}" Width="*" />
                <DataGridTextColumn Header="GSTIN" Binding="{Binding GSTIN}" Width="150" />
                <DataGridTextColumn Header="Country" Binding="{Binding Country}" Width="100" />
                <DataGridTextColumn Header="State" Binding="{Binding State}" Width="100" />
            </DataGrid.Columns>
        </DataGrid>
    </DockPanel>
</UserControl>
