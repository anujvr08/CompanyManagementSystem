<UserControl x:Class="CompanyManagementSystem.Presentation.Views.UserListView"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml">
    <Grid Margin="20">
        <Border Style="{StaticResource CardStyle}">
            <Grid>
                <Grid.RowDefinitions>
                    <RowDefinition Height="Auto" />
                    <RowDefinition Height="*" />
                    <RowDefinition Height="Auto" />
                </Grid.RowDefinitions>

                <StackPanel Grid.Row="0" Margin="0,0,0,20">
                    <TextBlock Text="User Directory" Style="{StaticResource HeaderStyle}" />
                    <TextBlock Text="Manage users in this company" Style="{StaticResource SubHeaderStyle}" Margin="0" />
                </StackPanel>

                <DataGrid Grid.Row="1" ItemsSource="{Binding Users}" 
                          AutoGenerateColumns="False" 
                          IsReadOnly="True">
                    <DataGrid.Columns>
                        <DataGridTextColumn Header="User ID" Binding="{Binding UserId}" Width="80" />
                        <DataGridTextColumn Header="Username" Binding="{Binding UserName}" Width="*" />
                    </DataGrid.Columns>
                </DataGrid>

                <StackPanel Grid.Row="2" Orientation="Horizontal" HorizontalAlignment="Right" Margin="0,20,0,0">
                    <Button Content="Back to Dashboard" Command="{Binding BackCommand}" 
                            Style="{StaticResource SecondaryBtn}" Width="150"/>
                </StackPanel>
            </Grid>
        </Border>
    </Grid>
</UserControl>
