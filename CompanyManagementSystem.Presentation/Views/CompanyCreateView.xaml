<UserControl x:Class="CompanyManagementSystem.Presentation.Views.CompanyCreateView"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml">
    <Grid>
        <Border Style="{StaticResource CardStyle}" 
                VerticalAlignment="Center" HorizontalAlignment="Center" 
                Width="450">
            <StackPanel>
                <TextBlock Text="New Company" Style="{StaticResource HeaderStyle}" />
                <TextBlock Text="Enter company details below" Style="{StaticResource SubHeaderStyle}" />

                <TextBlock Text="Company Name *" Style="{StaticResource LabelStyle}" />
                <TextBox Text="{Binding CompanyName, UpdateSourceTrigger=PropertyChanged}" 
                         Style="{StaticResource ModernTxt}" Margin="0,0,0,15" />

                <TextBlock Text="GSTIN" Style="{StaticResource LabelStyle}" />
                <TextBox Text="{Binding GSTIN, UpdateSourceTrigger=PropertyChanged}" 
                         Style="{StaticResource ModernTxt}" Margin="0,0,0,15" />

                <Grid Margin="0,0,0,15">
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="*" />
                        <ColumnDefinition Width="15" />
                        <ColumnDefinition Width="*" />
                    </Grid.ColumnDefinitions>
                    
                    <StackPanel Grid.Column="0">
                        <TextBlock Text="Country" Style="{StaticResource LabelStyle}" />
                        <TextBox Text="{Binding Country, UpdateSourceTrigger=PropertyChanged}" 
                                 Style="{StaticResource ModernTxt}" />
                    </StackPanel>

                    <StackPanel Grid.Column="2">
                        <TextBlock Text="State" Style="{StaticResource LabelStyle}" />
                        <TextBox Text="{Binding State, UpdateSourceTrigger=PropertyChanged}" 
                                 Style="{StaticResource ModernTxt}" />
                    </StackPanel>
                </Grid>

                <StackPanel Orientation="Horizontal" HorizontalAlignment="Right" Margin="0,15,0,0">
                    <Button Content="Cancel" Command="{Binding CancelCommand}" 
                            Style="{StaticResource SecondaryBtn}" Margin="0,0,10,0" Width="100"/>
                    <Button Content="Save Company" Command="{Binding SaveCommand}" 
                            Style="{StaticResource ModernBtn}" Width="140"/>
                </StackPanel>
            </StackPanel>
        </Border>
    </Grid>
</UserControl>
