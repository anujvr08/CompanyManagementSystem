<UserControl x:Class="CompanyManagementSystem.Presentation.Views.CompanyCreateView"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml">
    <StackPanel VerticalAlignment="Center" HorizontalAlignment="Center" Width="350">
        <TextBlock Text="Create New Company" Style="{StaticResource HeadingText}" />

        <TextBlock Text="Company Name *" Style="{StaticResource FormLabel}" />
        <TextBox Text="{Binding CompanyName, UpdateSourceTrigger=PropertyChanged}" Margin="0,0,0,10" Padding="4" />

        <TextBlock Text="GSTIN" Style="{StaticResource FormLabel}" />
        <TextBox Text="{Binding GSTIN, UpdateSourceTrigger=PropertyChanged}" Margin="0,0,0,10" Padding="4" />

        <TextBlock Text="Country" Style="{StaticResource FormLabel}" />
        <TextBox Text="{Binding Country, UpdateSourceTrigger=PropertyChanged}" Margin="0,0,0,10" Padding="4" />

        <TextBlock Text="State" Style="{StaticResource FormLabel}" />
        <TextBox Text="{Binding State, UpdateSourceTrigger=PropertyChanged}" Margin="0,0,0,20" Padding="4" />

        <StackPanel Orientation="Horizontal" HorizontalAlignment="Right">
            <Button Content="Cancel" Command="{Binding CancelCommand}" Margin="0,0,8,0" Padding="16,6" />
            <Button Content="Save" Command="{Binding SaveCommand}" Padding="16,6" />
        </StackPanel>
    </StackPanel>
</UserControl>
