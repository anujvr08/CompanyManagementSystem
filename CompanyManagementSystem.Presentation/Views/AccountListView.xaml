<UserControl x:Class="CompanyManagementSystem.Presentation.Views.AccountListView"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml">
    <Grid Margin="20">
        <Border Style="{StaticResource CardStyle}">
            <Grid>
                <Grid.RowDefinitions>
                    <RowDefinition Height="Auto" />
                    <RowDefinition Height="*" />
                    <RowDefinition Height="Auto" />
                </Grid.RowDefinitions>

                <StackPanel Grid.Row="0" Margin="0,0,0,20">
                    <TextBlock Text="Accounts" Style="{StaticResource HeaderStyle}" />
                    <TextBlock Text="List of all accounts in the ledger" Style="{StaticResource SubHeaderStyle}" Margin="0" />
                </StackPanel>

                <DataGrid Grid.Row="1" ItemsSource="{Binding Accounts}" 
                          AutoGenerateColumns="False" 
                          IsReadOnly="True">
                    <DataGrid.Columns>
                        <DataGridTextColumn Header="ID" Binding="{Binding AccountId}" Width="60" />
                        <DataGridTextColumn Header="Account Name" Binding="{Binding AccountName}" Width="*" />
                        <DataGridTextColumn Header="Group" Binding="{Binding Group}" Width="150" />
                        <DataGridTextColumn Header="Balance" Binding="{Binding Balance, StringFormat=C}" Width="120" />
                    </DataGrid.Columns>
                </DataGrid>

                <StackPanel Grid.Row="2" Orientation="Horizontal" HorizontalAlignment="Right" Margin="0,20,0,0">
                    <Button Content="Back to Dashboard" Command="{Binding BackCommand}" 
                            Style="{StaticResource SecondaryBtn}" Width="150"/>
                </StackPanel>
            </Grid>
        </Border>
    </Grid>
</UserControl>
