<UserControl x:Class="CompanyManagementSystem.Presentation.Views.MainMenuView"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml">
    <StackPanel VerticalAlignment="Center" HorizontalAlignment="Center" Width="300">
        <TextBlock Text="Company Management System" Style="{StaticResource HeadingText}" TextAlignment="Center" />
        <TextBlock Text="Main Menu" Style="{StaticResource SubheadingText}" TextAlignment="Center" Margin="0,0,0,20" />

        <Button Content="Create New Company" Command="{Binding CreateCompanyCommand}" Margin="0,0,0,10" Padding="10,8" />
        <Button Content="Load Existing Company" Command="{Binding LoadCompanyCommand}" Padding="10,8" />
    </StackPanel>
</UserControl>
