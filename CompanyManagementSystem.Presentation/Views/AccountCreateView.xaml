<UserControl x:Class="CompanyManagementSystem.Presentation.Views.AccountCreateView"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml">
    <StackPanel VerticalAlignment="Center" HorizontalAlignment="Center" Width="350">
        <TextBlock Text="Create New Account" Style="{StaticResource HeadingText}" />

        <TextBlock Text="Account Name *" Style="{StaticResource FormLabel}" />
        <TextBox Text="{Binding AccountName, UpdateSourceTrigger=PropertyChanged}" Margin="0,0,0,10" Padding="4" />

        <TextBlock Text="Group" Style="{StaticResource FormLabel}" />
        <TextBox Text="{Binding Group, UpdateSourceTrigger=PropertyChanged}" Margin="0,0,0,10" Padding="4" />

        <TextBlock Text="Opening Balance" Style="{StaticResource FormLabel}" />
        <TextBox Text="{Binding Balance, UpdateSourceTrigger=PropertyChanged}" Margin="0,0,0,20" Padding="4" />

        <StackPanel Orientation="Horizontal" HorizontalAlignment="Right">
            <Button Content="Cancel" Command="{Binding CancelCommand}" Margin="0,0,8,0" Padding="16,6" />
            <Button Content="Save" Command="{Binding SaveCommand}" Padding="16,6" />
        </StackPanel>
    </StackPanel>
</UserControl>
