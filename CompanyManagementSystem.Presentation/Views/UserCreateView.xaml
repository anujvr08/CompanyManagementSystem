<UserControl x:Class="CompanyManagementSystem.Presentation.Views.UserCreateView"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml">
    <StackPanel VerticalAlignment="Center" HorizontalAlignment="Center" Width="300">
        <TextBlock Text="Create New User" Style="{StaticResource HeadingText}" />

        <TextBlock Text="Username *" Style="{StaticResource FormLabel}" />
        <TextBox Text="{Binding UserName, UpdateSourceTrigger=PropertyChanged}" Margin="0,0,0,10" Padding="4" />

        <TextBlock Text="Password *" Style="{StaticResource FormLabel}" />
        <PasswordBox x:Name="PasswordInput" Margin="0,0,0,20" Padding="4" />

        <StackPanel Orientation="Horizontal" HorizontalAlignment="Right">
            <Button Content="Cancel" Command="{Binding CancelCommand}" Margin="0,0,8,0" Padding="16,6" />
            <Button Content="Save" Command="{Binding SaveCommand}"
                    CommandParameter="{Binding ElementName=PasswordInput}" Padding="16,6" />
        </StackPanel>
    </StackPanel>
</UserControl>
