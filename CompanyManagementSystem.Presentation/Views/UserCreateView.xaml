<UserControl x:Class="CompanyManagementSystem.Presentation.Views.UserCreateView"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml">
    <Grid>
        <Border Style="{StaticResource CardStyle}" 
                VerticalAlignment="Center" HorizontalAlignment="Center" 
                Width="400">
            <StackPanel>
                <TextBlock Text="Create User" Style="{StaticResource HeaderStyle}" />
                <TextBlock Text="Add a new user to the company" Style="{StaticResource SubHeaderStyle}" />

                <TextBlock Text="Username *" Style="{StaticResource LabelStyle}" />
                <TextBox Text="{Binding UserName, UpdateSourceTrigger=PropertyChanged}" 
                         Style="{StaticResource ModernTxt}" Margin="0,0,0,15" />

                <TextBlock Text="Password *" Style="{StaticResource LabelStyle}" />
                <PasswordBox x:Name="PasswordInput" 
                             Style="{StaticResource ModernPwd}" Margin="0,0,0,25" />

                <StackPanel Orientation="Horizontal" HorizontalAlignment="Right" Margin="0,10,0,0">
                    <Button Content="Cancel" Command="{Binding CancelCommand}" 
                            Style="{StaticResource SecondaryBtn}" Margin="0,0,10,0" Width="100"/>
                    <Button Content="Save User" Command="{Binding SaveCommand}" 
                            CommandParameter="{Binding ElementName=PasswordInput}"
                            Style="{StaticResource ModernBtn}" Width="120"/>
                </StackPanel>
            </StackPanel>
        </Border>
    </Grid>
</UserControl>
